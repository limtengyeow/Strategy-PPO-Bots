{
  "env": {
    "POLYGON_API_KEY": "ZAuGprSaaMMS8_7GeDVAzHJWfr0Vggqb",
    "DATA_FOLDER": "data/",
    "TENSORBOARD_LOG": "tb_logs/",
    "MODEL_DIR": "models/",
    "EVAL_DIR": "eval/"
  },

  "features": {
    "OBS_WINDOW": 20,

    "FEATURES": [
      { "type": "price", "field": "close", "normalize": true, "method": "zscore" },
      { "type": "price", "field": "volume", "normalize": true, "method": "rolling_zscore" }
   ]


  },

  "actions": {
    "ALLOW_LONG": true,
    "ALLOW_SHORT": true
  },

  "rewards": {
    "REWARD_COMPONENTS": [
      {
        "type": "pnl",
        "scale": 1000.0
      },
      {
        "type": "cut_loss",
        "threshold": -0.01,
        "penalty_ratio": 2.0
      },
      {
        "type": "overtrade_penalty",
        "min_duration": 5,
        "penalty_ratio": 1.0
      }
    ],
    "REWARD_SCALE": 1.0,
    "CLIP_REWARD": null,
    "NORM_REWARD": false,
    "DEBUG_REWARDS": true
  },

  "training": {
    "DEFAULT_INTERVAL": "5min",
    "TOTAL_TIMESTEPS": 1000000,
    "SAVE_FREQ": 100000,
    "EVAL_FREQ": 50000,
    "PPO_PARAMS": {
      "learning_rate": 0.0003,
      "n_steps": 2048,
      "batch_size": 64,
      "n_epochs": 10,
      "gamma": 0.99,
      "gae_lambda": 0.95,
      "clip_range": 0.2,
      "ent_coef": 0.2,
      "vf_coef": 0.5,
      "policy_kwargs": {
        "net_arch": [128, 128, 64],
        "activation_fn": "relu"
      }
    }
  },

  "evaluation": {
    "data_files": ["data/NVDA_test.csv"],
    "n_eval_episodes": 5,
    "deterministic": true,
    "render": false,
    "output_file": "eval/eval_results.json"
  },

  "logging": {
    "use_mlflow": true,
    "mlflow_uri": "http://localhost:5000",
    "experiment_name": "PPO_Trading",
    "log_params": true,
    "log_metrics": true
  },

  "metrics": {
    "enable": true,
    "track": [
      "win_rate",
      "profit_factor",
      "sharpe_ratio",
      "max_drawdown",
      "expectancy",
      "avg_trade_duration",
      "r_multiple"
    ]
  },

  "DEBUG": true
}
